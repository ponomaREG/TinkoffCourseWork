<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/emoji_view_bg_radius" />
            <solid android:color="@color/emoji_view_background_selected_color" />
        </shape>
    </item>
    <item android:state_selected="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/emoji_view_bg_radius" />
            <solid android:color="@color/emoji_view_background_color" />
        </shape>
    </item>
</selector>