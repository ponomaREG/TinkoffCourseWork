<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="@dimen/shimmer_item_user_margin_top">

    <View
        android:layout_width="@dimen/item_user_avatar_size"
        android:layout_height="@dimen/item_user_avatar_size"
        android:layout_marginStart="@dimen/item_user_avatar_margin_start"
        android:layout_marginEnd="@dimen/item_user_avatar_margin_end"
        android:background="@drawable/shimmer_round_avatar" />

    <View
        android:layout_width="@dimen/shimmer_item_user_text_width"
        android:layout_height="@dimen/item_user_avatar_size"
        android:background="@color/shimmer_background" />

</LinearLayout>