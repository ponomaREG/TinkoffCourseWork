<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_stream_height"
    android:gravity="center"
    android:background="@color/item_stream_background">

    <TextView
        android:id="@+id/item_stream_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="8"
        android:layout_marginStart="@dimen/item_stream_name_margin_start"
        android:textSize="@dimen/item_stream_name_text_size"
        android:textColor="@color/item_stream_name_text_color"
        tools:text="#general" />

    <ImageView
        android:id="@+id/item_stream_expand_arrow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:src="@drawable/ic_expand_arrow"/>

    <ProgressBar
        android:id="@+id/item_stream_loading_indicator"
        android:layout_width="@dimen/item_stream_loading_indicator_size"
        android:layout_height="@dimen/item_stream_loading_indicator_size"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:visibility="gone"
        />

</LinearLayout>